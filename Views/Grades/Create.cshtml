@model OOP_CA_Macintosh.Models.Grade

@{
    ViewData["Title"] = "Create";
    var id = TempData["id"] as string;
}

<h1>Create</h1>

<h4>Grade</h4>
<hr />
<div class="row" , style="width:400%">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h3>@id </h3>
                <label asp-for="StudentId" class="control-label"></label>
                <input asp-for="StudentId" class="form-control" />
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <select asp-for="Subject">
                    <option value="IT">IT</option>
                    <option value="ENGLISH">English</option>
                    <option value="MATHS">Maths</option>
                    <option value="PHYSICS">Physics</option>
                    <option value="HISTORY">History</option>
                    <option value="GEOGRAPHY">Geography</option>
                </select>
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Coef" class="control-label"></label>
                <input asp-for="Coef" class="form-control" />
                <span asp-validation-for="Coef" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Result" class="control-label"></label>
                <input asp-for="Result" class="form-control" />
                <span asp-validation-for="Result" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SeeClass" asp-controller="User">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}