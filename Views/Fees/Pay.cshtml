<h2 class="alert-danger" style="padding: 20px;">Do you really want to pay ?</h2>
@model OOP_CA_Macintosh.Models.Fee

<div class="row" , style="width:400%">
    <div class="col-md-4">
        <form asp-action="Pay">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Payed" class="control-label"></label>
                <select asp-for="Payed">
                    <option value="True">Yes</option>
                    <option value="False">No</option>
                </select>
                <span asp-validation-for="Payed" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Pay" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}