@model List<OOP_CA_Macintosh.Models.Courses>
<body>
    <header>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Courses"
               asp-action="Create">Create</a>
        </li>
    </header>

    <table class="table" , style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].Subject)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Start)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Length)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Start)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Length)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
