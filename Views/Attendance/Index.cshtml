@model List<OOP_CA_Macintosh.Models.Attendance>
<body>
    <header>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Attendance"
               asp-action="Create">Create</a>
        </li>
    </header>

    <table class="table" , style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].CourseId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].StudentsId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Present)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentsId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Present)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
